<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.interfaz.controller.LogsController" styleClass="main-container" stylesheets="@styles.css" spacing="15.0" prefWidth="800.0" prefHeight="600.0">
   <children>
      <!-- Título de la ventana -->
      <Label text="📋 Logs de la Consola" styleClass="section-title" style="-fx-font-size: 20px; -fx-text-fill: #007bff; -fx-alignment: center;" />
      
      <!-- Área de logs -->
      <VBox VBox.vgrow="ALWAYS" styleClass="input-section">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="📊 Logs del Sistema" styleClass="section-title" style="-fx-font-size: 14px;" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#onRefreshLogs" text="🔄 Actualizar" styleClass="secondary-button" />
                  <Button fx:id="clearLogsButton" mnemonicParsing="false" onAction="#onClearLogs" text="🧹 Limpiar" styleClass="secondary-button" />
               </children>
            </HBox>
            
            <!-- Controles de filtrado -->
            <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 10 0 10 0;">
               <children>
                  <Label text="🔍 Filtros:" style="-fx-font-size: 12px; -fx-text-fill: #666666;" />
                  <CheckBox fx:id="showExtractAudioCheckBox" text="[ExtractAudio]" selected="true" onAction="#onFilterChanged" style="-fx-text-fill: #28a745; -fx-font-weight: bold;" />
                  <CheckBox fx:id="showDownloadCheckBox" text="[download]" selected="true" onAction="#onFilterChanged" style="-fx-text-fill: #dc3545; -fx-font-weight: bold;" />
                  <CheckBox fx:id="showOtherLogsCheckBox" text="Otros logs" selected="true" onAction="#onFilterChanged" style="-fx-text-fill: #6c757d;" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="resetFiltersButton" mnemonicParsing="false" onAction="#onResetFilters" text="↺ Resetear" styleClass="secondary-button" style="-fx-font-size: 10px;" />
               </children>
            </HBox>
            
            <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true" fitToHeight="true" style="-fx-background-color: #1e1e1e; -fx-control-inner-background: #1e1e1e;" prefHeight="450.0">
               <content>
                  <TextFlow fx:id="logsTextFlow" style="-fx-font-family: 'Consolas', 'Monaco', monospace; -fx-font-size: 12px; -fx-background-color: #1e1e1e; -fx-padding: 10;" />
               </content>
            </ScrollPane>
         </children>
      </VBox>
      
      <!-- Separador -->
      <Separator styleClass="separator" />
      
      <!-- Botones de control -->
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="saveLogsButton" mnemonicParsing="false" onAction="#onSaveLogs" text="💾 Guardar Logs" styleClass="start-button" />
            <Button fx:id="closeButton" mnemonicParsing="false" onAction="#onClose" text="❌ Cerrar" styleClass="cancel-button" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>